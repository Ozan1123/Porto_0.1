---
// Contact Component - Minimal contact section with social links
interface ContactLink {
  name: string;
  url: string;
  icon: string;
}

const email = "muhammadfauzanpratama420@gmail.com";

const socialLinks: ContactLink[] = [
  { name: "GitHub", url: "https://github.com/Ozan1123", icon: "github" },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/muhammad-fauzan-pratama-776468365",
    icon: "linkedin",
  },
  {
    name: "Instagram",
    url: "https://www.instagram.com/zan_2_you",
    icon: "instagram",
  },
];
---

<section id="contact" class="contact">
  <div class="contact-container">
    <!-- Background Decoration -->
    <div class="contact-bg">
      <div class="bg-gradient"></div>
      <div class="bg-circle circle-1"></div>
      <div class="bg-circle circle-2"></div>
    </div>

    <div class="contact-content">
      <!-- Section Header -->
      <div class="section-header reveal-bottom">
        <div class="section-label">
          <span class="label-line"></span>
          <span class="label-text">LET'S CONNECT</span>
          <span class="label-line"></span>
        </div>
        <h2 class="contact-title">Have a project in mind?</h2>
        <p class="contact-subtitle">
          I'm always open to discussing new projects, creative ideas, or
          opportunities to be part of your vision.
        </p>
      </div>

      <!-- Email -->
      <div class="contact-email reveal-left reveal-delay-1">
        <a href={`mailto:${email}`} class="email-link">
          <span class="email-icon">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="1.5"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <rect width="20" height="16" x="2" y="4" rx="2"></rect>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
            </svg>
          </span>
          <span class="email-text">{email}</span>
          <span class="email-arrow">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <line x1="7" y1="17" x2="17" y2="7"></line>
              <polyline points="7 7 17 7 17 17"></polyline>
            </svg>
          </span>
        </a>
      </div>

      <!-- Social Links -->
      <div class="social-links reveal-right reveal-delay-2">
        {
          socialLinks.map((link) => (
            <a
              href={link.url}
              class="social-link"
              target="_blank"
              rel="noopener noreferrer"
              aria-label={link.name}
            >
              {link.icon === "github" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="22"
                  height="22"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
                  <path d="M9 18c-4.51 2-5-2-7-2" />
                </svg>
              )}
              {link.icon === "linkedin" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="22"
                  height="22"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
                  <rect width="4" height="12" x="2" y="9" />
                  <circle cx="4" cy="4" r="2" />
                </svg>
              )}
              {link.icon === "instagram" && (
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="22"
                  height="22"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <rect width="20" height="20" x="2" y="2" rx="5" ry="5" />
                  <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z" />
                  <line x1="17.5" x2="17.51" y1="6.5" y2="6.5" />
                </svg>
              )}
            </a>
          ))
        }
      </div>

      <!-- CTA Button -->
      <div class="contact-cta reveal-bottom reveal-delay-3">
        <a href={`mailto:${email}`} class="btn btn-primary">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M22 2L11 13"></path>
            <path d="M22 2L15 22 11 13 2 9 22 2z"></path>
          </svg>
          Send a Message
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    padding: var(--space-24) 0 var(--space-16);
    position: relative;
    overflow: hidden;
  }

  .contact-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--space-6);
    position: relative;
  }

  /* Background */
  .contact-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .bg-gradient {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 60%;
    background: linear-gradient(to top, rgba(26, 39, 68, 0.03), transparent);
  }

  .bg-circle {
    position: absolute;
    border-radius: 50%;
    border: 1px solid var(--silver);
    opacity: 0.3;
  }

  .circle-1 {
    width: 300px;
    height: 300px;
    right: -100px;
    top: 0;
  }

  .circle-2 {
    width: 200px;
    height: 200px;
    left: -50px;
    bottom: 20%;
  }

  /* Content */
  .contact-content {
    position: relative;
    text-align: center;
  }

  .section-header {
    margin-bottom: var(--space-10);
  }

  .section-label {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .label-line {
    width: 60px;
    height: 1px;
    background: var(--silver);
  }

  .label-text {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--night-blue);
    letter-spacing: 0.2em;
  }

  .contact-title {
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--night-blue);
    margin-bottom: var(--space-4);
  }

  .contact-subtitle {
    font-size: var(--text-lg);
    color: var(--gray);
    max-width: 500px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* Email Link */
  .contact-email {
    margin-bottom: var(--space-8);
  }

  .email-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4) var(--space-6);
    background: var(--white);
    border: 1px solid var(--silver);
    border-radius: var(--radius-full);
    transition: all var(--transition-base);
  }

  .email-link:hover {
    border-color: var(--night-blue);
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
  }

  .email-icon {
    color: var(--night-blue);
  }

  .email-text {
    font-size: var(--text-lg);
    font-weight: var(--font-medium);
    color: var(--night-blue);
  }

  .email-arrow {
    color: var(--gray-light);
    transition: all var(--transition-fast);
  }

  .email-link:hover .email-arrow {
    color: var(--night-blue);
    transform: translate(3px, -3px);
  }

  /* Social Links */
  .social-links {
    display: flex;
    justify-content: center;
    gap: var(--space-4);
    margin-bottom: var(--space-8);
  }

  .social-link {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: var(--white);
    border: 1px solid var(--silver);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gray);
    transition: all var(--transition-base);
  }

  .social-link:hover {
    background: var(--night-blue);
    border-color: var(--night-blue);
    color: var(--white);
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  /* CTA */
  .contact-cta {
    margin-top: var(--space-6);
  }

  /* Responsive */
  @media (max-width: 600px) {
    .contact-title {
      font-size: var(--text-3xl);
    }

    .email-link {
      flex-direction: column;
      padding: var(--space-4);
      border-radius: var(--radius-xl);
    }

    .email-arrow {
      display: none;
    }
  }
</style>
