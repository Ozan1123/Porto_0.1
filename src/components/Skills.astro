---
interface Skill {
  name: string;
  icon: string;
  level: number; // 1-5
}

const skills: Skill[] = [
  { name: "PHP", icon: "php", level: 4 },
  { name: "Laravel", icon: "laravel", level: 5 },
  { name: "Node.js", icon: "node", level: 3 },
  { name: "Python", icon: "python", level: 2 },
  { name: "MySQL", icon: "mysql", level: 5 },
  { name: "MongoDB", icon: "mongo", level: 1 },
  { name: "Redis", icon: "redis", level: 1 },
  { name: "JavaScript", icon: "javascript", level: 4 },
  { name: "React", icon: "react", level: 3},
];

const tools = [
  "Git", "Docker", "Postman", "Laragon", "Xampp",
];
---

<section id="skills" class="skills">
  <div class="skills-container">
    <!-- Section Header -->
    <div class="section-header">
      <div class="section-label">
        <span class="label-line"></span>
        <span class="label-text">SKILLS & TOOLS</span>
        <span class="label-line"></span>
      </div>
      <p class="section-subtitle">Technologies I work with</p>
    </div>
    
    <!-- Skills Grid -->
    <div class="skills-grid">
      {skills.map((skill, index) => (
        <div class="skill-item" style={`animation-delay: ${index * 0.1}s`}>
          <div class="skill-circle">
            <div class="skill-icon">
              {skill.icon === 'php' && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <ellipse cx="12" cy="12" rx="10" ry="6"/>
                  <path d="M5.5 11l1-3h2l-.5 1.5h1c1 0 1.5.5 1.5 1s-.5 1.5-1.5 1.5h-1l-.5 1.5h-2"/>
                  <path d="M12 11l1-3h2l-.5 1.5h1c1 0 1.5.5 1.5 1s-.5 1.5-1.5 1.5h-1l-.5 1.5h-2"/>
                </svg>
              )}
              {skill.icon === 'laravel' && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M3 7l6 4v8l-6-4V7z"/>
                  <path d="M9 11l6-4v8l-6 4v-8z"/>
                  <path d="M15 7l6 4v8l-6-4V7z"/>
                  <path d="M3 7l6-4 6 4"/>
                  <path d="M15 7l6-4"/>
                </svg>
              )}
              {skill.icon === 'node' && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M12 2l8 4.5v9L12 20l-8-4.5v-9L12 2z"/>
                  <circle cx="12" cy="11" r="3"/>
                </svg>
              )}
              {skill.icon === 'python' && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M12 3c-4 0-4 2-4 3v2h4v1H6c-2 0-3 1.5-3 4s1 4 3 4h2v-2c0-1 1-2 2-2h4c1 0 2-1 2-2V6c0-1-1-3-4-3z"/>
                  <path d="M12 21c4 0 4-2 4-3v-2h-4v-1h6c2 0 3-1.5 3-4s-1-4-3-4h-2v2c0 1-1 2-2 2h-4c-1 0-2 1-2 2v4c0 1 1 3 4 3z"/>
                  <circle cx="9" cy="6" r="1"/>
                  <circle cx="15" cy="18" r="1"/>
                </svg>
              )}
              {skill.icon === 'mysql' && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <ellipse cx="12" cy="6" rx="8" ry="3"/>
                  <path d="M4 6v6c0 1.7 3.6 3 8 3s8-1.3 8-3V6"/>
                  <path d="M4 12v6c0 1.7 3.6 3 8 3s8-1.3 8-3v-6"/>
                </svg>
              )}
              {skill.icon === 'postgres' && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <ellipse cx="12" cy="6" rx="8" ry="3"/>
                  <path d="M4 6v12c0 1.7 3.6 3 8 3s8-1.3 8-3V6"/>
                  <path d="M4 12c0 1.7 3.6 3 8 3s8-1.3 8-3"/>
                  <circle cx="15" cy="14" r="2"/>
                </svg>
              )}
              {skill.icon === 'mongo' && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M12 2c-2 5-6 8-6 13 0 3 2.5 6 6 7 3.5-1 6-4 6-7 0-5-4-8-6-13z"/>
                  <path d="M12 22v-4"/>
                </svg>
              )}
              {skill.icon === 'redis' && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M4 9l8 4 8-4"/>
                  <path d="M4 13l8 4 8-4"/>
                  <path d="M4 17l8 4 8-4"/>
                  <path d="M4 9l8-4 8 4"/>
                </svg>
              )}
              {skill.icon === 'javascript' && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <rect x="3" y="3" width="18" height="18" rx="2"/>
                  <path d="M12 8v6c0 1-1 2-2 2"/>
                  <path d="M16 14c0 1-1 2-2 2s-2-1-2-2 1-2 2-2 2 1 2 2z"/>
                </svg>
              )}
              {skill.icon === 'react' && (
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <circle cx="12" cy="12" r="2"/>
                  <ellipse cx="12" cy="12" rx="10" ry="4"/>
                  <ellipse cx="12" cy="12" rx="10" ry="4" transform="rotate(60 12 12)"/>
                  <ellipse cx="12" cy="12" rx="10" ry="4" transform="rotate(120 12 12)"/>
                </svg>
              )}
            </div>
            
            <!-- Level indicator -->
            <svg class="skill-progress" viewBox="0 0 100 100">
              <circle class="progress-bg" cx="50" cy="50" r="45"/>
              <circle 
                class="progress-bar" 
                cx="50" cy="50" r="45"
                style={`stroke-dasharray: ${skill.level * 56.5} 283`}
              />
            </svg>
          </div>
          <span class="skill-name">{skill.name}</span>
        </div>
      ))}
    </div>
    
    <!-- Tools List -->
    <div class="tools-section">
      <h3 class="tools-title">Other Tools</h3>
      <div class="tools-list">
        {tools.map(tool => (
          <span class="tool-tag">{tool}</span>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .skills {
    padding: var(--space-24) 0;
    background: linear-gradient(180deg, var(--white) 0%, var(--off-white) 100%);
  }
  
  .skills-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }
  
  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }
  
  .section-label {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }
  
  .label-line {
    width: 60px;
    height: 1px;
    background: var(--silver);
  }
  
  .label-text {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--night-blue);
    letter-spacing: 0.2em;
  }
  
  .section-subtitle {
    font-size: var(--text-lg);
    color: var(--gray);
  }
  
  /* Skills Grid */
  .skills-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-8);
    margin-bottom: var(--space-12);
  }
  
  .skill-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
    opacity: 0;
    animation: fadeInUp 0.5s ease forwards;
  }
  
  .skill-circle {
    position: relative;
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform var(--transition-base);
  }
  
  .skill-item:hover .skill-circle {
    transform: scale(1.1);
  }
  
  .skill-icon {
    width: 32px;
    height: 32px;
    color: var(--night-blue);
    z-index: 1;
  }
  
  .skill-icon svg {
    width: 100%;
    height: 100%;
  }
  
  .skill-progress {
    position: absolute;
    width: 100%;
    height: 100%;
    transform: rotate(-90deg);
  }
  
  .progress-bg {
    fill: none;
    stroke: var(--silver);
    stroke-width: 2;
  }
  
  .progress-bar {
    fill: none;
    stroke: var(--night-blue);
    stroke-width: 3;
    stroke-linecap: round;
    transition: stroke-dasharray var(--transition-slow);
  }
  
  .skill-item:hover .progress-bar {
    stroke: var(--night-blue-light);
  }
  
  .skill-name {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--gray-dark);
  }
  
  /* Tools Section */
  .tools-section {
    text-align: center;
    padding-top: var(--space-8);
    border-top: 1px solid var(--silver);
  }
  
  .tools-title {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--gray);
    letter-spacing: 0.1em;
    text-transform: uppercase;
    margin-bottom: var(--space-4);
  }
  
  .tools-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-3);
  }
  
  .tool-tag {
    padding: var(--space-2) var(--space-4);
    background: var(--white);
    border: 1px solid var(--silver);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    color: var(--gray);
    transition: all var(--transition-fast);
  }
  
  .tool-tag:hover {
    background: var(--night-blue);
    color: var(--white);
    border-color: var(--night-blue);
  }
  
  /* Responsive */
  @media (max-width: 600px) {
    .skills-grid {
      gap: var(--space-6);
    }
    
    .skill-circle {
      width: 70px;
      height: 70px;
    }
    
    .skill-icon {
      width: 28px;
      height: 28px;
    }
  }
</style>
