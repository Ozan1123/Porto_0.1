---
interface Project {
  year: string;
  title: string;
  category: string;
  description: string;
  image?: string;
  link?: string;
}

const projects: Project[] = [
  {
    year: "2024",
    title: "E-Commerce Platform",
    category: "Web Development",
    description:
      "Full-stack e-commerce solution with modern UI and seamless checkout experience.",
    link: "#",
  },
  {
    year: "2023",
    title: "Dashboard Analytics",
    category: "UI/UX Design",
    description:
      "Data visualization dashboard with real-time updates and intuitive navigation.",
    link: "#",
  },
  {
    year: "2023",
    title: "Mobile Banking App",
    category: "App Design",
    description:
      "Secure and user-friendly mobile banking interface with biometric authentication.",
    link: "#",
  },
  {
    year: "2022",
    title: "Portfolio Website",
    category: "Web Development",
    description:
      "Minimalist portfolio showcasing creative work with smooth animations.",
    link: "#",
  },
];
---

<section id="work" class="portfolio">
  <div class="portfolio-container">
    <!-- Section Header -->
    <div class="section-header reveal-bottom">
      <div class="section-label">
        <span class="label-line"></span>
        <span class="label-text">SELECTED WORK</span>
        <span class="label-line"></span>
      </div>
      <p class="section-subtitle">A collection of projects I'm proud of</p>
    </div>

    <!-- Timeline -->
    <div class="timeline-wrapper reveal-bottom reveal-delay-1">
      <div class="timeline-line"></div>

      <div class="timeline-projects">
        {
          projects.map((project, index) => (
            <div
              class="project-item"
              style={`animation-delay: ${index * 0.15}s`}
            >
              <div class="project-marker">
                <div class="marker-dot" />
                <span class="marker-year">{project.year}</span>
              </div>

              <div class="project-card">
                <div class="project-thumbnail">
                  <div class="thumbnail-placeholder">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="32"
                      height="32"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="1"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <rect x="3" y="3" width="18" height="18" rx="2" ry="2" />
                      <circle cx="8.5" cy="8.5" r="1.5" />
                      <polyline points="21 15 16 10 5 21" />
                    </svg>
                  </div>
                </div>

                <div class="project-info">
                  <span class="project-category">{project.category}</span>
                  <h3 class="project-title">{project.title}</h3>
                  <p class="project-description">{project.description}</p>

                  <a href={project.link} class="project-link">
                    View Project
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      width="16"
                      height="16"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <line x1="7" y1="17" x2="17" y2="7" />
                      <polyline points="7 7 17 7 17 17" />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    <!-- View More -->
    <div class="portfolio-footer reveal-bottom reveal-delay-2">
      <a href="#" class="btn btn-outline">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M15 3h6v6"></path>
          <path d="M10 14L21 3"></path>
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
          ></path>
        </svg>
        View All Projects
      </a>
    </div>
  </div>
</section>

<style>
  .portfolio {
    padding: var(--space-24) 0;
    background: var(--white);
    position: relative;
  }

  .portfolio-container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 var(--space-6);
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-label {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .label-line {
    width: 60px;
    height: 1px;
    background: var(--silver);
  }

  .label-text {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--night-blue);
    letter-spacing: 0.2em;
  }

  .section-subtitle {
    font-size: var(--text-lg);
    color: var(--gray);
  }

  /* Timeline */
  .timeline-wrapper {
    position: relative;
    padding: var(--space-8) 0;
  }

  .timeline-line {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 1px;
    background: linear-gradient(
      to bottom,
      transparent,
      var(--silver) 10%,
      var(--silver) 90%,
      transparent
    );
    transform: translateX(-50%);
  }

  .timeline-projects {
    display: flex;
    flex-direction: column;
    gap: var(--space-12);
  }

  /* Project Item */
  .project-item {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: var(--space-8);
    align-items: center;
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
  }

  .project-item:nth-child(even) .project-card {
    order: -1;
  }

  .project-item:nth-child(even) .project-card {
    text-align: right;
  }

  .project-item:nth-child(even) .project-info {
    align-items: flex-end;
  }

  /* Marker */
  .project-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
  }

  .marker-dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: var(--white);
    border: 3px solid var(--night-blue);
    position: relative;
    z-index: 1;
    transition: all var(--transition-base);
  }

  .project-item:hover .marker-dot {
    background: var(--night-blue);
    transform: scale(1.3);
  }

  .marker-year {
    font-size: var(--text-sm);
    font-weight: var(--font-bold);
    color: var(--night-blue);
  }

  /* Project Card */
  .project-card {
    display: flex;
    gap: var(--space-4);
    align-items: flex-start;
  }

  .project-thumbnail {
    width: 80px;
    height: 80px;
    border-radius: var(--radius-lg);
    background: var(--off-white);
    border: 1px solid var(--silver);
    overflow: hidden;
    flex-shrink: 0;
    transition: all var(--transition-base);
  }

  .project-item:hover .project-thumbnail {
    transform: scale(1.05);
    box-shadow: var(--shadow-md);
  }

  .thumbnail-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--gray-light);
  }

  .project-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .project-category {
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    color: var(--night-blue-light);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .project-title {
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    color: var(--night-blue);
    margin: 0;
  }

  .project-description {
    font-size: var(--text-sm);
    color: var(--gray);
    max-width: 300px;
    line-height: 1.5;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--night-blue);
    margin-top: var(--space-2);
    transition: all var(--transition-fast);
  }

  .project-link:hover {
    color: var(--night-blue-light);
    gap: var(--space-3);
  }

  /* Portfolio Footer */
  .portfolio-footer {
    text-align: center;
    margin-top: var(--space-12);
  }

  /* Responsive */
  @media (max-width: 900px) {
    .timeline-line {
      left: 20px;
    }

    .project-item {
      grid-template-columns: auto 1fr;
      gap: var(--space-6);
    }

    .project-marker {
      order: -1;
    }

    .project-item:nth-child(even) .project-card {
      order: 0;
      text-align: left;
    }

    .project-item:nth-child(even) .project-info {
      align-items: flex-start;
    }
  }

  @media (max-width: 480px) {
    .project-card {
      flex-direction: column;
    }

    .project-thumbnail {
      width: 100%;
      height: 120px;
    }
  }
</style>
