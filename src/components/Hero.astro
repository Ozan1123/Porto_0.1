---
// Hero Component - Main landing section with photo and intro
interface Props {
  name?: string;
  title?: string;
  subtitle?: string;
}

const {
  name = "M. FAUZAN PRATAMA",
  title = "Backend Developer",
  subtitle = "& Database Enthusiast",
} = Astro.props;
---

<section id="home" class="hero">
  <!-- Geometric Decorations -->
  <div class="geo-decoration">
    <div class="geo-circle circle-1"></div>
    <div class="geo-circle circle-2"></div>
    <div class="geo-circle circle-3"></div>
    <svg class="geo-lines" viewBox="0 0 400 400">
      <circle cx="200" cy="200" r="180" class="line-circle"></circle>
      <circle cx="200" cy="200" r="140" class="line-circle delay"></circle>
    </svg>
  </div>

  <div class="hero-container">
    <!-- Photo Section -->
    <div class="hero-photo-wrapper">
      <div class="photo-ring"></div>
      <div class="photo-ring ring-outer"></div>
      <div class="hero-photo">
        <img src="/profile.png" alt="M. Fauzan Pratama - Backend Developer" />
      </div>
    </div>

    <!-- Content Section -->
    <div class="hero-content">
      <p class="hero-greeting animate-fade-in-up">Hello, I'm</p>
      <h1 class="hero-name animate-fade-in-up animate-delay-1">{name}</h1>
      <h2 class="hero-title animate-fade-in-up animate-delay-2">
        {title}
        <span class="title-accent">{subtitle}</span>
      </h2>
      <p class="hero-description animate-fade-in-up animate-delay-3">
        Building robust backend systems and optimizing database architecture.
        Turning complex data into efficient, scalable solutions.
      </p>
      <div class="hero-cta animate-fade-in-up animate-delay-4">
        <a href="#work" class="btn btn-primary">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path d="M6 9l6 6 6-6"></path>
          </svg>
          View My Work
        </a>
        <a href="#contact" class="btn btn-outline">Get In Touch</a>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="scroll-indicator">
    <div class="scroll-line"></div>
    <span>SCROLL DOWN</span>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding-top: var(--space-20);
    overflow: hidden;
  }

  /* Geometric Decorations */
  .geo-decoration {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .geo-circle {
    position: absolute;
    border: 1px solid var(--silver);
    border-radius: 50%;
    opacity: 0.5;
  }

  .circle-1 {
    width: 400px;
    height: 400px;
    top: 10%;
    right: -100px;
    animation: pulse-ring 8s ease-in-out infinite;
  }

  .circle-2 {
    width: 200px;
    height: 200px;
    bottom: 20%;
    left: 5%;
    animation: pulse-ring 6s ease-in-out infinite 1s;
  }

  .circle-3 {
    width: 100px;
    height: 100px;
    top: 30%;
    left: 15%;
    animation: pulse-ring 5s ease-in-out infinite 0.5s;
  }

  .geo-lines {
    position: absolute;
    width: 500px;
    height: 500px;
    top: 50%;
    left: 20%;
    transform: translate(-50%, -50%);
    opacity: 0.3;
  }

  .line-circle {
    fill: none;
    stroke: var(--silver);
    stroke-width: 1;
    stroke-dasharray: 10 5;
    animation: rotate-slow 60s linear infinite;
  }

  .line-circle.delay {
    animation-direction: reverse;
    animation-duration: 80s;
  }

  /* Hero Container */
  .hero-container {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 0 var(--space-6);
    display: grid;
    grid-template-columns: 1fr 1.2fr;
    gap: var(--space-16);
    align-items: center;
    position: relative;
    z-index: 1;
  }

  /* Photo Section */
  .hero-photo-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .photo-ring {
    position: absolute;
    width: 320px;
    height: 320px;
    border: 2px solid var(--silver);
    border-radius: 50%;
    animation: pulse-ring 4s ease-in-out infinite;
  }

  .photo-ring.ring-outer {
    width: 380px;
    height: 380px;
    border-width: 1px;
    animation-delay: 0.5s;
  }

  .hero-photo {
    width: 280px;
    height: 280px;
    border-radius: 50%;
    background: linear-gradient(
      135deg,
      var(--off-white) 0%,
      var(--silver) 100%
    );
    overflow: hidden;
    box-shadow:
      0 0 0 4px var(--white),
      0 0 0 6px var(--platinum),
      var(--shadow-xl);
    position: relative;
    z-index: 1;
  }

  .hero-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 20%;
  }

  .photo-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--gray-light);
    gap: var(--space-2);
  }

  .photo-placeholder span {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
  }

  /* Content Section */
  .hero-content {
    position: relative;
  }

  .hero-greeting {
    font-size: var(--text-lg);
    color: var(--gray);
    font-weight: var(--font-light);
    margin-bottom: var(--space-2);
    opacity: 0;
  }

  .hero-name {
    font-size: var(--text-7xl);
    font-weight: var(--font-extrabold);
    color: var(--night-blue);
    letter-spacing: -0.02em;
    line-height: 1;
    margin-bottom: var(--space-4);
    opacity: 0;
  }

  .hero-title {
    font-size: var(--text-2xl);
    font-weight: var(--font-medium);
    color: var(--gray-dark);
    margin-bottom: var(--space-6);
    opacity: 0;
  }

  .title-accent {
    color: var(--night-blue-light);
    font-weight: var(--font-light);
  }

  .hero-description {
    font-size: var(--text-base);
    color: var(--gray);
    max-width: 480px;
    margin-bottom: var(--space-8);
    opacity: 0;
  }

  .hero-cta {
    display: flex;
    gap: var(--space-4);
    opacity: 0;
  }

  /* Scroll Indicator */
  .scroll-indicator {
    position: absolute;
    bottom: var(--space-8);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
    color: var(--gray-light);
    font-size: var(--text-xs);
    letter-spacing: 0.2em;
    animation: float 2s ease-in-out infinite;
  }

  .scroll-line {
    width: 1px;
    height: 40px;
    background: linear-gradient(to bottom, var(--night-blue), transparent);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .hero-container {
      grid-template-columns: 1fr;
      text-align: center;
      gap: var(--space-10);
    }

    .hero-photo-wrapper {
      order: -1;
    }

    .hero-photo {
      width: 220px;
      height: 220px;
    }

    .photo-ring {
      width: 260px;
      height: 260px;
    }

    .photo-ring.ring-outer {
      width: 300px;
      height: 300px;
    }

    .hero-description {
      margin-left: auto;
      margin-right: auto;
    }

    .hero-cta {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .hero-photo {
      width: 180px;
      height: 180px;
    }

    .photo-ring {
      width: 220px;
      height: 220px;
    }

    .photo-ring.ring-outer {
      width: 260px;
      height: 260px;
    }

    .hero-cta {
      flex-direction: column;
    }

    .hero-name {
      font-size: var(--text-5xl);
    }
  }
</style>
